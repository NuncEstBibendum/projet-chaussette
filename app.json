{
  "expo": {
    "name": "mtg-demonic-tutor",
    "slug": "mtg-demonic-tutor",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1e1e1e"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/beleren-bold.ttf",
            "./assets/fonts/matrix-bold.ttf",
            "./assets/fonts/plantin.ttf",
            "./assets/fonts/plantin-italic.ttf",
            "./assets/fonts/relay-medium.ttf",
            "./assets/fonts/symbols.ttf"
          ]
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1e1e1e"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
